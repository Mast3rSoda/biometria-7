<Window x:Class="biometria_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:biometria_7"
        mc:Ignorable="d"
        Title="BiOwOmetria7" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenFile" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Name="Img"/>
            <StackPanel Grid.Column="1">
                <Button Name="KMM" Content="KMM" Click="KMM_Click"></Button>
                <Button Name="K3M" Content="K3M" Click="K3M_Click"></Button>
                <Button Name="Zhang" Content="Zhang" Click="Zhang_Click"></Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
